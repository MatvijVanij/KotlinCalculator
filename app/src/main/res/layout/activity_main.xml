<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:textColor="@android:color/black"
        android:background="#c1dcf7"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        android:singleLine="true"
         />

    <TextView
        android:id="@+id/result_text"
        android:background="#c1dcf7"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:textColor="@android:color/black"
        android:gravity="end"
        android:ellipsize="end"
        android:textSize="40sp"
        android:singleLine="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_AC"
                android:text="AC"
                />
            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_leftbunch"
                android:text="("
                />

            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_rightbunch"
                android:text=")"
                />
            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_div"
            android:text="/"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_7"
                android:textColor="@color/black"
                android:text="7"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_8"
                android:textColor="@color/black"
                android:text="8"
                />

            <TextView
                style="@style/NumberButton"
                android:textColor="@color/black"
                android:id="@+id/btn_9"
                android:text="9"
                />
            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_mult"
                android:text="*"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_4"
                android:textColor="@color/black"
                android:text="4"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_5"
                android:textColor="@color/black"
                android:text="5"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_6"
                android:textColor="@color/black"
                android:text="6"
                />
            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_plus"
                android:text="+"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_1"
                android:textColor="@color/black"
                android:text="1"
                />
            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_2"
                android:textColor="@color/black"
                android:text="2"
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_3"
                android:textColor="@color/black"
                android:text="3"
                />
            <TextView
                style="@style/ActionButton"
                android:id="@+id/btn_minus"
                 android:text="-"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_0"
                android:textColor="@color/black"
                android:text="0"
                />
            <TextView
                style="@style/NumberButton"
                android:textColor="@color/black"
                android:text="."
                />

            <TextView
                style="@style/NumberButton"
                android:id="@+id/btn_back"
                android:textColor="@color/black"
                android:text="Back"
                />
            <TextView
                style="@style/ActionButton"
                android:textColor="#300102"
                android:textSize="40sp"
                android:id="@+id/btn_equal"
                android:text="="
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>